}

int program(int argc, string[] argv) {
  int minx = 80;
  int miny = 80;
  int input = 0;
  Board s = new Board();
  con_init();
  con_move(0,0);
  instructions();
  while ((input != 27)) {
    con_clear();
  	s.draw();
  	input = con_getch();
  	con_refresh();
  }
  con_cleanup();
  return 0;
}